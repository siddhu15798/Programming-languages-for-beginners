#include<stdio.h>
#include<conio.h>
#include<string.h>
int main()
{int i,j,n;
printf("enter the no. of rowsto be printed");
scanf("%d",&n);
for(i=1;i<=n;i++)
{
 for(j=1;j<=i;j++)
 {
     if(i%2==0)
     {
         if(j%2==0)
         {
             printf("1 ");
         }
         else
        {
            printf("0 ");
        }
     }
    else
    {
        if(j%2==0)
        {
            printf("0 ");
        }
        else
        {
            printf("1 ");
        }
    }
 }printf("\n");
}
return 0;
}

